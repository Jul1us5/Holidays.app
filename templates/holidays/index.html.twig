{% extends 'base.html.twig' %} {% block title %}Holidays Application{% endblock
%} {% block body %}

<div class="container">
  <div class="row">
    <nav>MAIN</nav>
  </div>
  <div class="row">
    <div class="col-lg-3">
      <div class="row">
        <div class="head">
          <!-- <span>Search :</span> -->
        </div>
      </div>
      <div class="row">
        <!-- Default form subscription -->
        <form
          class="text-center border border-light p-5"
          action="http://localhost:8888/Applications/Holidays/public/"
        >
          <h1 class="h4 mb-4">Holidays Application</h1>

          <p>Below are lists of public holidays by country or region.</p>
          <p>Search between states by region and year</p>
          <!-- Name -->

          <select name="country" multiple class="form-control" id="sel2">
            <option>Lithuania</option>
            <option>Latvia</option>
            <option>Estonia</option>
            <option>Russia</option>
            <option>Poland</option>
          </select>

          <select
            name="region"
            class="form-control"
            id="exampleFormControlSelect1"
          >
            <option>Region</option>
            <option>bw</option>
          </select>

          <!-- Email -->
          <select
            name="year"
            class="form-control"
            id="exampleFormControlSelect1"
          >
            <option>Year</option>
            <option>2020</option>
            <option>2021</option>
            <option>2022</option>
            <option>2023</option>
            <option>2024</option>
          </select>

          <!-- Sign in button -->
          <button class="btn btn-info btn-block" type="submit">Sign in</button>
        </form>
        <!-- Default form subscription -->
      </div>
    </div>
    <div class="col-lg-9">
      <div class="result">
        <h2>Holidays in this Country: ...</h2>
      </div>
      <span>.</span>
    </div>
  </div>
</div>

{% endblock %}
